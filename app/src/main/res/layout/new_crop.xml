<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/paddingCard">

        <TextView
            android:id="@+id/textView2"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre cultivo" />

        <EditText
            android:id="@+id/name_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="La rivera 1"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitud: 5.2656" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitud: 75.5854" />

        <TextView
            android:id="@+id/textView5"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección" />

        <EditText
            android:id="@+id/address_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Km 1 vía Iza"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView6"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de siembra" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Seleccionar fecha" />

            <TextView
                android:id="@+id/textViewSelectedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha seleccionada" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Área del terreno" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/area_new_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />

            <Spinner
                android:id="@+id/area_units_new_crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/options_array" />
        </LinearLayout>

        <TextView
            android:id="@+id/analisis_suelo"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Análisis del suelo" />

        <Spinner
            android:id="@+id/yes_no_ns_nr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/yes_no" />

        <TextView
            android:id="@+id/textView8"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Textura de suelo" />

        <Spinner
            android:id="@+id/floor_type_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/options_floor" />

        <TextView
            android:id="@+id/view_topography"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topografía del suelo" />

        <Spinner
            android:id="@+id/floor_topography_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/topography_options" />

        <TextView
            android:id="@+id/textViewDistancia"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distancia entre surcos (cm)" />

        <EditText
            android:id="@+id/distance_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="120"
            android:inputType="number" />

        <TextView
            android:id="@+id/textViewDistancePlants"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distancia entre plantas (cm)" />

        <EditText
            android:id="@+id/distance_plants_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="90"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semilla" />

        <EditText
            android:id="@+id/seed_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Certificada"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView9"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especie" />

        <EditText
            android:id="@+id/specie_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Solanum tuberosum"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView10"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Variedad" />

        <EditText
            android:id="@+id/variety_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Criolla"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView11"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cultivo anterior" />

        <EditText
            android:id="@+id/last_crop_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Cebolla larga"
            android:inputType="text" />

        <TextView
            android:id="@+id/viewConductividad"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conductividad eléctrica (S/m)" />

        <EditText
            android:id="@+id/conductivity_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0.8"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/viewPh"
            style="@style/labelForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ph" />

        <EditText
            android:id="@+id/ph_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="7"
            android:inputType="numberDecimal" />

        <!--- DOS COLUMNAS CALCIO NITROGENO-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewCalcio"
                    style="@style/labelForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calcio" />

                <EditText
                    android:id="@+id/calcium_new_crop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="25"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewNitrogeno"
                    style="@style/labelForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nitrógeno" />

                <EditText
                    android:id="@+id/nitrogen_new_crop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="32"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>

        <!--- DOS COLUMNAS POTASIO FOSFORO-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewFosforo"
                    style="@style/labelForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fósforo" />

                <EditText
                    android:id="@+id/phosphorous_new_crop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="15"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewPotasio"
                    style="@style/labelForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Potasio" />

                <EditText
                    android:id="@+id/potassium_new_crop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="52"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>

        <!--- DOS COLUMNAS SODIO SAT ALUMINIO-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewSodio"
                    style="@style/labelForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sodio" />

                <EditText
                    android:id="@+id/sodium_new_crop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="350"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView123"
                    style="@style/labelForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sat. Aluminio" />

                <EditText
                    android:id="@+id/sat_aluminum_new_crop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="42"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/save_new_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="saveCrop"
            android:text="Guardar" />

    </LinearLayout>
</ScrollView>